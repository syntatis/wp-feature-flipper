{
	"name": "syntatis/wp-feature-flipper",
	"description": "Disable Comments, Gutenberg, Emojis, and other features you don't need in WordPressÂ®",
	"type": "wordpress-plugin",
	"keywords": [
		"wordpress",
		"plugin",
		"flipper",
		"feature",
		"rss",
		"gutenberg",
		"emojis",
		"xmlrpc"
	],
	"authors": [
		{
			"name": "Thoriq Firdaus",
			"homepage": "https://github.com/tfirdaus"
		}
	],
	"license": "GPL-3.0",
	"autoload": {
		"psr-4": {
			"Syntatis\\FeatureFlipper\\": "app/"
		}
	},
	"autoload-dev": {
		"files": [
			"inc/bootstrap/dev.php"
		],
		"psr-4": {
			"Syntatis\\Tests\\": [
				"tests/phpunit/",
				"tests/phpunit/app/"
			]
		}
	},
	"require": {
		"php": "^7.4 || ^8.0",
		"jaybizzle/crawler-detect": "^1.3",
		"symfony/uid": "^5.4",
		"syntatis/codex": "^0.3",
		"syntatis/codex-settings-provider": "^0.3"
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"fakerphp/faker": "^1.24",
		"filp/whoops": "^2.18",
		"johnbillion/wp-compat": "^1.2",
		"nunomaduro/collision": "^5.11",
		"php-stubs/woocommerce-stubs": "^10.1",
		"php-stubs/wordpress-tests-stubs": "^6.8",
		"phpcompatibility/phpcompatibility-wp": "^2.1",
		"phpstan/extension-installer": "^1.4",
		"phpstan/phpstan": "^2.1",
		"phpstan/phpstan-deprecation-rules": "^2.0",
		"phpstan/phpstan-phpunit": "^2.0",
		"phpstan/phpstan-strict-rules": "^2.0",
		"phpunit/phpunit": "^9.2.6",
		"shipmonk/dead-code-detector": "^0.13",
		"shipmonk/phpstan-rules": "^4.1",
		"symfony/var-dumper": "^5.4",
		"syntatis/codex-companion": "^0.4",
		"syntatis/coding-standard": "^2.0",
		"syntatis/phpstan-psr-11": "^0.1",
		"szepeviktor/phpstan-wordpress": "^2.0",
		"wp-cli/i18n-command": "^2.6",
		"yoast/wp-test-utils": "^1.2"
	},
	"suggest": {
		"filp/whoops": "Provide better error handling in the browser",
		"nunomaduro/collision": "Provide better error handling in the console"
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"scripts": {
		"analyze": "phpstan --memory-limit=2G",
		"build": [
			"codex scoper:init --yes --no-dev",
			"@make-pot"
		],
		"format": "phpcbf",
		"lint": "phpcs",
		"make-pot": "wp i18n make-pot --exclude=vendor,dist,build . inc/languages/syntatis-feature-flipper.pot",
		"scope": "codex scoper:init",
		"zip": "@composer archive --format=zip"
	},
	"scripts-descriptions": {
		"analyze": "Analyse the codebase for static code errors",
		"build": "Build the plugin for production",
		"format": "Fix coding standards violations",
		"lint": "Check the codebase for coding standards violations",
		"make-pot": "Generate the POT file for translations",
		"scope": "Scope dependencies namespace with a prefix",
		"test": "Run the test suite",
		"zip": "Create a distributable zip file of the plugin"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"phpstan/extension-installer": true,
			"syntatis/codex-companion": true
		},
		"preferred-install": "dist",
		"sort-packages": true
	},
	"archive": {
		"exclude": [
			"*.config.*",
			"*.dist",
			"*.neon",
			"*.inc.php",
			"*.lock",
			"*.map",
			"*.md",
			"*.xml*",
			"*.zip",
			".*",
			"LICENSE",
			"composer.json",
			"dev.php",
			"node_modules",
			"package-lock.json",
			"package.json",
			"src",
			"tests",
			"vendor",
			"!dist/autoload/composer.json",
			"!dist/autoload/vendor"
		]
	},
	"extra": {
		"codex": {
			"scoper": {
				"prefix": "SFFV",
				"exclude-namespaces": [
					"NunoMaduro\\Collision",
					"PHPUnit",
					"Syntatis\\Tests",
					"Whoops"
				],
				"install-dev": [
					"filp/whoops",
					"nunomaduro/collision",
					"symfony/var-dumper"
				],
				"finder": {
					"not-path": [
						"psalm.xml",
						"jaybizzle/crawler-detect/raw",
						"jaybizzle/crawler-detect/export.php"
					]
				}
			}
		}
	}
}
